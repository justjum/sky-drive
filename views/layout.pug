doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    script(src="/javascripts/bootstrap.bundle.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/bootstrap.snippets.js" defer)
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
  body.p-0
    div.navbar-expand-lg.bg-secondary.text-white
      div.container.d-flex.justify-content-between.align-items-center
        div 
          img.cloud(src="/images/cloud-outline.svg", alt="Cloud Image")
          h4(font-size="2rem")= title
        div 

        div(style="text-align:center;")
          if user 
            a(href="/log-out") 
              h4 Log Out 
          else
            form.log-in.d-flex.align-items-center.justify-content-center.gap-2(action="/log-in" method="post")
              div.mb-3 
                label.form-label(for="username")
                input.form-control(type="text" name="username" placeholder="Username")
              div.mb-3
                label.form-label(for="password")
                input.form-control(type="password" name="password" placeholder="Password")
              div.mb-3
                button.btn.btn-primary(type="submit") Login

    block content

       
